{
  "name": "latexis",
  "displayName": "LaTeXiS Tools",
  "publisher": "LuisRobles",
  "author": {
    "name": "Luis Robles"
  },
  "icon": "images/icon.png",
  "description": "Advanced LaTeX extension that provides intelligent assistance, automatic package management, multilingual support, and thesis/project templates designed to improve the LaTeX writing workflow.",
  "version": "0.0.3",
  "repository": {
    "type": "git",
    "url": "https://github.com/rralDev/latexis.git"
  },
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "latexis.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "latexis.insertFigure",
        "title": "LaTeXiS: Insertar figura"
      },
      {
        "command": "latexis.insertEquation",
        "title": "LaTeXiS: Insertar ecuación"
      },
      {
        "command": "latexis.scanDocument",
        "title": "LaTeXiS: Analizar documento y añadir paquetes faltantes"
      },
      {       
        "command": "latexis.insertAPAConfig",
        "title": "LaTeXiS: Insertar configuración APA (biblatex + biber)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.46.3",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "ts-loader": "^9.5.4",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
