{
  "name": "latexis",
  "displayName": "LaTeXiS Tools",
  "publisher": "LuisRobles",
  "author": {
    "name": "Luis Robles"
  },
  "icon": "images/icon.png",
  "description": "Advanced LaTeX productivity extension for VS Code focused on real academic workflows. LaTeXiS streamlines thesis and scientific writing through automated project scaffolding, smart bibliography management (BibLaTeX, Biber, DOI-based insertion), fast draft compilation for large documents, embedded TODO tracking, Excel-to-LaTeX table generation, figure automation, and document analysis. Designed for articles, reports, theses, and long-form academic projects.",
  "version": "0.2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/rralDev/latexis.git"
  },
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [    
    "Productivity",
    "Snippets"
  ],
  "files": [
  "dist",
  "resources",
  "images",
  "package.json",
  "README.md"
  ],
  "keywords": [
    "academic-latex",
    "academic-productivity",
    "academic-tools",
    "academic-workflow",
    "academic-writing",
    "academic",
    "apa-citation",
    "apa-style",
    "apa",
    "automation",
    "biber",
    "biblatex",
    "bibliography",
    "booktabs",
    "chicago",
    "citation-style",
    "citations",
    "clipboard",
    "csv",
    "document-automation",
    "doi",
    "excel-to-latex",
    "excel",
    "latex-extension",
    "latex-table-generator",
    "latex-tables",
    "latex-tools",
    "latex-workflow",
    "latex",
    "multirow",
    "paper-writing",
    "reference-manager",
    "references",
    "research-tools",
    "research",
    "scientific-documents",
    "scientific-writing",
    "spreadsheet",
    "table-generator",
    "tables",
    "tabular",
    "tabularx",
    "tesis",
    "theses",
    "thesis-writing",
    "thesis",
    "tsv",
    "vancouver",
    "vscode-extension",
    "vscode-latex",
    "vscode-tools"
  ],
  "activationEvents": [
    "onCommand:latexis.manageReferences",
    "onCommand:latexis.insertFigure",
    "onCommand:latexis.manageTables",
    "onCommand:latexis.insertEquation",
    "onCommand:latexis.scanDocument",
    "onCommand:latexis.listTodos",
    "onCommand:latexis.toggleDraftMode",
    "onCommand:latexis.createAcademicProject"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "latexis.manageReferences",
        "title": "LaTeXiS: Gestionar referencias"
      },
      {
        "command": "latexis.insertFigure",
        "title": "LaTeXiS: Insertar figura"
      },
      {
        "command": "latexis.manageTables",
        "title": "LaTeXiS: Insertar tabla"
      },
      {
        "command": "latexis.insertEquation",
        "title": "LaTeXiS: Insertar ecuación"
      },
      {
        "command": "latexis.scanDocument",
        "title": "LaTeXiS: Analizar documento y añadir paquetes faltantes"
      },
      {
        "command": "latexis.listTodos",
        "title": "LaTeXiS: Listar TODOs del proyecto"
      },
      {
        "command": "latexis.toggleDraftMode",
        "title": "LaTeXiS: Alternar modo borrador (compilación rápida)"
      },
      {
        "command": "latexis.createAcademicProject",
        "title": "LaTeXiS: Crear nuevo proyecto académico"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.106.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "xlsx-js-style": "^1.2.0"
  }
}
